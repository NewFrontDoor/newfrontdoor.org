{
  "name": "vision-100-it-website",
  "version": "1.0.0",
  "description": "The source of the Vision 100 IT Website",
  "main": "gulpfile.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production gulp build",
    "lint": "xo",
    "publish": "cross-env NODE_ENV=production gulp publish",
    "publish:aws": "cross-env NODE_ENV=production gulp publish --aws",
    "start": "gulp",
    "test": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Vision100IT/v100it-template.git"
  },
  "author": "Jonathan Haines",
  "contributors": [
    {
      "name": "Jonathan Haines"
    },
    {
      "name": "Alan Reader"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "fetch": "1.1.0",
    "lodash": "4.17.2",
    "lunr": "0.7.2",
    "moment": "2.16.0",
    "node-sass": "3.13.0",
    "react": "15.3.2",
    "react-addons-pure-render-mixin": "15.4.1",
    "react-dom": "15.4.0",
    "react-gateway": "2.3.0",
    "react-modal2": "3.1.0",
    "react-reformed": "0.4.2",
    "react-router": "3.0.0",
    "react-scroll": "1.4.4",
    "react-sticky": "5.0.5",
    "react-waypoint": "4.1.0",
    "webfontloader": "1.6.26"
  },
  "devDependencies": {
    "autoprefixer": "6.5.3",
    "ava": "0.17.0",
    "babel-cli": "6.18.0",
    "babel-core": "6.18.2",
    "babel-loader": "6.2.8",
    "babel-plugin-lodash": "3.2.9",
    "babel-plugin-webpack-loaders": "0.8.0",
    "babel-polyfill": "6.16.0",
    "babel-preset-es2015": "6.18.0",
    "babel-preset-react": "6.16.0",
    "babel-preset-stage-2": "6.18.0",
    "bootstrap-sass": "3.3.7",
    "browser-sync": "2.18.2",
    "browser-sync-webpack-plugin": "1.1.3",
    "classnames": "2.2.5",
    "cross-env": "3.1.3",
    "css-loader": "0.26.0",
    "del": "2.2.2",
    "enzyme": "2.6.0",
    "eslint": "3.10.2",
    "eslint-config-xo-react": "0.10.0",
    "eslint-import-resolver-webpack": "0.7.0",
    "eslint-plugin-react": "6.7.1",
    "eval": "0.1.1",
    "extract-text-webpack-plugin": "1.0.1",
    "file-loader": "0.9.0",
    "font-awesome": "4.7.0",
    "front-matter": "2.1.1",
    "github-slugger": "1.1.1",
    "gulp": "3.9.1",
    "gulp-awspublish": "3.3.0",
    "gulp-cloudfront-invalidate-aws-publish": "0.2.1",
    "gulp-filter": "4.0.0",
    "gulp-front-matter": "1.3.0",
    "gulp-gh-pages": "0.5.4",
    "gulp-load-plugins": "1.4.0",
    "gulp-notify": "2.2.0",
    "gulp-plumber": "1.1.0",
    "gulp-util": "3.0.7",
    "html-loader": "0.4.4",
    "json-loader": "0.5.4",
    "lodash-webpack-plugin": "0.10.6",
    "lost": "7.1.1",
    "mdast-util-toc": "2.0.0",
    "ngrok": "2.2.3",
    "node-libs-browser": "2.0.0",
    "normalize.css": "5.0.0",
    "offline-plugin": "3.4.2",
    "postcss-calc": "5.3.1",
    "postcss-colorblind": "BarryThePenguin/postcss-colorblind#patch-1",
    "postcss-lh": "1.1.4",
    "postcss-loader": "1.1.1",
    "postcss-pxtorem": "3.3.1",
    "raw-loader": "0.5.1",
    "react-addons-test-utils": "15.4.1",
    "remark": "6.2.0",
    "remark-react": "3.1.0",
    "remark-slug": "4.2.2",
    "remove-markdown": "0.1.0",
    "sass-loader": "4.0.2",
    "slash": "1.0.0",
    "static-site-generator-webpack-plugin": "3.1.0",
    "style-loader": "0.13.1",
    "stylelint": "7.6.0",
    "stylelint-config-standard": "14.0.0",
    "through2": "2.0.1",
    "url-loader": "0.5.7",
    "webpack": "1.13.3",
    "webpack-dev-server": "1.16.2",
    "webpack-notifier": "1.4.1",
    "xo": "0.17.1",
    "xo-loader": "0.7.0"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "xo": {
    "esnext": true,
    "extends": "xo-react",
    "rules": {
      "react/no-danger": 1,
      "react/no-children-prop": 0,
      "import/no-unassigned-import": 1
    },
    "settings": {
       "import/resolver": {
         "webpack": {
           "config": "webpack.config.js"
         }
       }
    },
    "envs": [
      "browser"
    ]
  },
  "stylelint": {
    "syntax": "scss",
    "extends": "stylelint-config-standard",
    "rules": {
      "indentation": "tab",
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "local"
          ]
        }
      ],
      "unit-no-unknown": [
        true,
        {
          "ignoreUnits": [
            "lh"
          ]
        }
      ],
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "/^lost/"
          ]
        }
      ]
    }
  },
  "babel": {
    "plugins": [
      "lodash"
    ],
    "presets": [
      "react",
      "es2015",
      "stage-2"
    ],
    "env": {
      "test": {
        "plugins": "babel-plugin-webpack-loaders"
      }
    }
  }
}
