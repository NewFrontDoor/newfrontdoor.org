    "react-scroll": "^1.4.4",
    "react-sticky": "^5.0.5",
    "react-waypoint": "^5.0.3",
    "string-hash": "^1.1.3",
    "webfontloader": "^1.6.26"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.3",
    "ava": "^0.18.2",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.8",
    "babel-plugin-lodash": "^3.2.10",
    "babel-plugin-transform-react-constant-elements": "^6.23.0",
    "babel-plugin-transform-react-inline-elements": "^6.22.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.3.2",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-2": "^6.18.0",
    "bootstrap-sass": "^3.3.7",
    "browser-sync": "^2.18.2",
    "browser-sync-webpack-plugin": "^1.1.3",
    "classnames": "^2.2.5",
    "cross-env": "^3.2.3",
    "css-loader": "^0.27.1",
    "del": "^2.2.2",
    "enzyme": "^2.6.0",
    "eslint": "^3.11.0",
    "eslint-config-xo-react": "^0.11.1",
    "eslint-import-resolver-webpack": "^0.8.0",
    "eslint-plugin-react": "^6.7.1",
    "eval": "^0.1.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.10.1",
    "front-matter": "^2.1.1",
    "github-slugger": "^1.1.1",
    "gulp": "^3.9.1",
    "gulp-awspublish": "^3.3.0",
    "gulp-cloudfront-invalidate-aws-publish": "^0.2.1",
    "gulp-filter": "^5.0.0",
    "gulp-front-matter": "^1.3.0",
    "gulp-gh-pages": "^0.5.4",
    "gulp-load-plugins": "^1.4.0",
    "gulp-notify": "^3.0.0",
    "gulp-plumber": "^1.1.0",
    "gulp-util": "^3.0.7",
    "html-loader": "^0.4.4",
    "json-loader": "^0.5.4",
    "lodash-webpack-plugin": "^0.11.0",
    "lost": "^8.0.0",
    "mdast-util-toc": "^2.0.0",
    "ngrok": "^2.2.3",
    "node-libs-browser": "^2.0.0",
    "node-sass": "^4.1.1",
    "normalize.css": "^5.0.0",
    "offline-plugin": "^4.5.2",
    "postcss-calc": "^5.3.1",
    "postcss-colorblind": "BarryThePenguin/postcss-colorblind#patch-1",
    "postcss-lh": "^1.1.4",
    "postcss-loader": "^1.1.1",
    "postcss-pxtorem": "^4.0.0",
    "postcss-typography": "2.0.0-0",
    "raw-loader": "^0.5.1",
    "react-addons-test-utils": "^15.4.1",
    "remark": "^7.0.0",
    "remark-react": "^4.0.0",
    "remark-slug": "^4.2.2",
    "remove-markdown": "^0.1.0",
    "sass-loader": "^6.0.3",
    "slash": "^1.0.0",
    "static-site-generator-webpack-plugin": "^3.1.0",
    "style-loader": "^0.16.0",
    "stylelint": "^7.9.0",
    "stylelint-config-lost": "^0.0.3",
    "stylelint-config-property-sort-order-smacss": "github:barrythepenguin/stylelint-config-property-sort-order-smacss#stylelint-order",
    "stylelint-config-sass-guidelines": "^2.0.0",
    "stylelint-config-standard": "^16.0.0",
    "through2": "^2.0.1",
    "url-loader": "^0.5.7",
    "webpack": "^2.3.2",
    "webpack-dev-server": "^2.4.2",
    "webpack-notifier": "^1.4.1",
    "xo": "^0.18.0",
    "xo-loader": "^0.7.0"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "xo": {
    "parser": "babel-eslint",
    "extends": "xo-react",
    "rules": {
      "react/forbid-component-props": 1,
      "react/no-danger": 1,
      "react/no-children-prop": 1,
      "import/no-unassigned-import": 1
    },
    "envs": [
      "browser"
    ]
  },
  "stylelint": {
    "syntax": "scss",
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-sass-guidelines",
      "stylelint-config-property-sort-order-smacss",
      "stylelint-config-lost"
    ],
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "include",
            "lost",
            "typography"
          ]
        }
      ],
      "indentation": "tab",
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "local"
          ]
        }
      ],
      "selector-class-pattern": [
        null,
        "^[a-z0-9]+(?:[A-Z][a-z]+)*$"
      ],
      "unit-no-unknown": [
        true,
        {
          "ignoreUnits": [
            "lh"
          ]
        }
      ],
      "order/declaration-block-properties-alphabetical-order": null,
      "max-nesting-depth": null,
      "selector-max-compound-selectors": null
    }
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
